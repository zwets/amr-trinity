{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Defines the sample sheet for AMR Trinity",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": { "type": "string", "pattern": "^\\S+$" },
      "species": { "type": "string" },
      "assembly": { "type": "string", "pattern": "\\S+$" }
    },
    "required": [ "id", "assembly" ]
  }
}
